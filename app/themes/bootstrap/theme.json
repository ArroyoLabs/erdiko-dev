{
    "name": "bootstrap",
    "description": "Bootstrap based Erdiko theme",
    "credits": "John Arroyo",
    "namespace": "/app/themes/bootstrap",
    "public": "/public/themes/bootstrap",
    "rules": {
        "header": {
            "condition": {
                "route": "/"
            },
            "view": "slideshow"
        }
    },
    "css": [{
        "name": "default",
        "file": "/themes/bootstrap/css/styles.min.css",
        "active": 1
    }],
    "js": {
        "default": {
            "file": "/themes/bootstrap/js/scripts.min.js",
            "active": 1,
            "order": 1
        }
    },
    "templates": {
        "default": {
            "file": "default"
        },
        "fullpage": {
            "file": "fullpage"
        },
        "header": {
            "file": "page/header"
        },
        "footer": {
            "file": "page/footer"
        },
        "analytics": {
            "file": "page/analytics"
        },
        "messages": {
            "file": "page/messages"
        }
    },
    "layouts": {
        "1column": {
            "file": "/themes/bootstrap/templates/layouts/1column"
        },
        "2column": {
            "file": "/themes/bootstrap/templates/layouts/2column"
        },
        "3column": {
            "file": "/themes/bootstrap/templates/layouts/3column"
        }
    },
    "views": {}
}
